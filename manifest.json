{
  "manifest_version": 3,
  "name": "Productivity Logger",
  "version": "1.0",
  "description": "Focus session tracker with live relevancy score.",
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "scripting",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
